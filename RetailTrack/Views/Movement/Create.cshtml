@model RetailTrack.Models.Movement

<h1>Crear Movimiento</h1>

<form method="post">
    <div class="form-group">
        <label for="Type">Tipo</label>
        <select class="form-select" id="Type" name="Type">
            <option value="PorCobrar">Por Cobrar</option>
            <option value="Vendido">Vendido</option>
        </select>
    </div>
    <div class="form-group">
        <label for="FinalPrice">Precio Final</label>
        <input type="number" step="0.01" class="form-control" id="FinalPrice" name="FinalPrice" required />
    </div>
    <div class="form-group">
        <label for="Currency">Moneda</label>
        <input type="text" class="form-control" id="Currency" name="Currency" required />
    </div>
    <button type="submit" class="btn btn-success mt-3">Guardar</button>
</form>
