@model List<RetailTrack.Models.Movement>

<h1>Movimientos</h1>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<a href="/Movement/Create" class="btn btn-primary mb-3">Crear Movimiento</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Precio Final</th>
            <th>Moneda</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movement in Model)
        {
            <tr>
                <td>@movement.Type</td>
                <td>@movement.FinalPrice</td>
                <td>@movement.Currency</td>
                <td>@movement.Timestamp</td>
                <td>
                    <a href="/Movement/Details/@movement.Id" class="btn btn-info btn-sm">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
