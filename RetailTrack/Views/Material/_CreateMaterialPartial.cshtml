@model RetailTrack.ViewModels.MaterialViewModel

<form asp-action="CreatePartial" asp-controller="Material" method="post">
    <div class="form-group">
        <label asp-for="MaterialTypeId">Tipo de Material</label>
        <select id="MaterialTypeId" name="MaterialTypeId" class="form-control" onchange="getMaterialsByType(this.value)">
            <option value="">Seleccione un tipo de material</option>
            @foreach (var materialType in Model.MaterialTypes)
            {
                <option value="@materialType.Value">@materialType.Text</option>
            }
        </select>
    </div>    
    <div class="form-group">
        <label asp-for="Name">Nombre del Material</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SizeId">Tama√±o</label>
        <select asp-for="SizeId" name="SizeId" class="form-control">
            <option value="">Seleccione un Talle</option>
            @foreach (var size in Model.Sizes)
            {
                <option value="@size.Value">@size.Text</option>
            }
        </select>    
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
