@model IEnumerable<RetailTrack.ViewModels.ProductDetailsViewModel>

<h2>Lista de Productos</h2>
<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Nuevo Producto</a>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Dise√±o</th>
            <th>Talle</th>
            <th>Tipo producto</th>
            <th>Material</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.QuantityRequested</td>
                <td>@product.Design</td>
                <td>@product.Size</td>
                <td>@product.MaterialType</td>
                <td>@product.Material</td>
                <td>@product.Status</td>
                <td>
                    <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-info">Ver</a>
                </td>
            </tr>
        }
    </tbody>
</table>
