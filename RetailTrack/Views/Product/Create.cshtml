@model RetailTrack.Models.Products.Product

<h2>Crear Producto</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Nombre</label>
        <input type="text" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Descripción</label>
        <textarea name="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Size">Talle</label>
        <select name="Size" asp-for="Size" class="form-control">
            <option value="XS">XS</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
            <option value="XXL">XXL</option>
        </select>
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Estado</label>
        <select name="Status" asp-for="Status" class="form-control">
            <option value="Pending">Pendiente</option>
            <option value="ReadyToManufacture">Listo para confeccionar</option>
            <option value="Manufactured">Confeccionado</option>
            <option value="Sold">Vendido</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantityRequested">Cantidad</label>
        <input type="number" name="QuantityRequested" class="form-control" />
        <span asp-validation-for="QuantityRequested" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DesignId">Diseño</label>
        <select name="DesignId" asp-for="DesignId" class="form-control" asp-items="ViewBag.Designs">
            <option value="">Seleccione un diseño</option>
            @foreach (var design in (IEnumerable<SelectListItem>)ViewBag.Designs)
            {
                <option value="@design.Value">@design.Text</option>
            }
        </select>
        <span asp-validation-for="DesignId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
