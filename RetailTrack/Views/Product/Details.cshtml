@model RetailTrack.ViewModels.ProductDetailsViewModel

<h2>Detalles del Producto</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.Name</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Columna izquierda: Datos generales del producto -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Estado:</label>
                    <p>@Model.Status</p>
                </div>
                <div class="mb-3">
                    <label class="form-label">Descripci칩n:</label>
                    <p>@Model.Description</p>
                </div>
                <div class="mb-3">
                    <label class="form-label">Precio de Venta:</label>
                    <p>@Model.Price</p>
                </div>
            </div>

            <!-- Columna derecha: Dise침o -->
            <div class="col-md-6 text-center">
                <label class="form-label">Dise침o:</label>
                <p>@Model.Design</p>
                <div id="designImageContainer">
                    <img id="designImage" src="@Url.Content("~/" + Model.Design.ImageUrl)" alt="Dise침o" width="150" class="img-fluid border rounded" />
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Variantes del producto -->
<div class="card mt-4">
    <div class="card-header">
        <h5>Variantes del Producto</h5>
    </div>
    <div class="card-body">
        @if (Model.Variants != null && Model.Variants.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tipo Material</th>
                        <th>Material</th>
                        <th>Talle</th>
                        <th>Stock</th>
                        <th>Precio de Venta</th>
                        <th>Costo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var variant in Model.Variants)
                    {
                        <tr>
                            <td>@variant.MaterialTypeName</td>
                            <td>@variant.MaterialName</td>
                            <td>@variant.MaterialSizeName</td>
                            <td>@variant.Stock</td>
                            <td>@(variant.CustomPrice?.ToString("F2") ?? "N/A")</td>
                            <td>@variant.Cost.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No hay variantes registradas para este producto.</p>
        }
    </div>
</div>

<a href="@Url.Action("Index", "Product")" class="btn btn-primary mt-3">Volver</a>
